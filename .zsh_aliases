git-root() {
    cd $(git root)
}
build-gui() {
    pwd=$(pwd)
    git-root
    cd appliance
    ant createVersion
    cd client/gui
    ant all
    cd $pwd
}
debug-gui() {
    pwd=$(pwd)
    git-root
    cd appliance/client/gui
    grunt
    cd $pwd
}
build-app() {
    export JAVA_HOME=/usr/lib/jvm/java-7-jdk
    pwd=$(pwd)
    git-root
    cd appliance
    ant dev
    cd $pwd
}
